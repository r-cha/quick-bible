{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "quick-bible",
  "title": "Quick Bible",
  "description": "Look up a bible verse",
  "icon": "command-icon.png",
  "author": "r-cha",
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Bible",
      "description": "Look up a bible verse",
      "mode": "view",
      "arguments": [
        {
          "name": "reference",
          "placeholder": "Reference",
          "type": "text",
          "required": true
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.69.2",
    "@raycast/utils": "^1.13.3",
    "bible-passage-reference-parser": "^2.0.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
